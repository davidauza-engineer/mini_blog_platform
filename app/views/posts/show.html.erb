<div class="container mt-4 mb-4">
  <div class="card mb-4">
    <div class="card-body">
      <h1 class="card-title"><%= @post.title %></h1>
      <p class="text-muted">Author: <%= @post.author.email %></p>
      <p class="card-text"><%= @post.body %></p>
      <% if @post.author == current_user %>
        <div class="d-flex justify-content-between">
          <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %>
          <%= form_with url: post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'd-inline' do %>
            <button type="submit" class="btn btn-danger">Delete</button>
          <% end %>
        </div>
      <% end %>
      <%= link_to 'Back', 'javascript:history.back()', class: 'btn btn-secondary mt-3' %>
    </div>
  </div>

  <h2>Comments</h2>
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with(model: [@post, @comment], local: true) do |form| %>
        <div class="mb-3">
          <%= form.text_area :body, class: 'form-control', rows: 3 %>
        </div>
        <div class="d-grid gap-2">
          <%= form.submit 'Post Comment', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @post.comments.each do |comment| %>
      <div class="col-12 mb-3">
        <div class="card">
          <div class="card-body">
            <p><%= comment.body %> - <strong><%= comment.author.email %></strong></p>
            <% if comment.author == current_user %>
              <div class="d-flex justify-content-between">
                <%= link_to 'Edit', edit_post_comment_path(@post, comment), class: 'btn btn-sm btn-warning' %>
                <%= form_with url: post_comment_path(@post, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'd-inline' do %>
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
