<div class="container mt-4 mb-4">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">Edit Comment</h1>
      <%= form_with(model: [@post, @comment], local: true) do |form| %>
        <div class="mb-3">
          <%= form.text_area :body, class: 'form-control', rows: 5 %>
        </div>
        <div class="d-grid gap-2">
          <%= form.submit 'Update Comment', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= link_to 'Back', post_path(@post), class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
